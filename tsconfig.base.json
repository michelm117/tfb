{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    // "module": "esnext",
    "module": "commonjs",
    "strictPropertyInitialization": false,
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tfb/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@tfb/api/core": ["libs/api/core/src/index.ts"],
      "@tfb/web/core": ["libs/web/core/src/index.ts"],
      "@tfb/web/data": ["libs/web/data/src/index.ts"],
      "@tfb/web/layout": ["libs/web/layout/src/index.ts"],
      "@tfb/web/modules": ["libs/web/modules/src/index.ts"],
      "@tfb/web/shared": ["libs/web/shared/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
